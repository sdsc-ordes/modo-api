

server {
  listen 80 ;

  # Inform client about public URLs
  location = / {
    default_type application/json ;
    return 201 '
      {
        "status": "success",
        "s3": "${S3_PUBLIC_URL}",
        "htsget": "${HTSGET_PUBLIC_URL}"
      }' ;
  }
  # S3 bucket service
  location /s3 {
    rewrite ^/s3/(.*) /$1 break ;
    proxy_pass ${S3_LOCAL_URL} ;
  }
  # Genomic file streaming with htsget
  location /htsget {
    rewrite ^/htsget/(.*) /$1 break ;
    proxy_pass ${HTSGET_LOCAL_URL} ;
  }
  # All other paths forwarded to modo server
  location / {
    proxy_pass ${MODO_LOCAL_URL} ;
  }
}
